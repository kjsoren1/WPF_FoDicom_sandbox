<Window x:Class="WpfAppTutorial.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTutorial.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <!-- Row 1 -->
        <!--<TextBlock Text="{Binding Path=FirstName, Mode=OneWay}" Grid.Row="1" Grid.Column="1" />-->
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="8,0,8,8">Directory</TextBlock>
        <TextBox MinWidth="800" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" x:Name="DirectorySelected"></TextBox>
        <Button MinWidth="100" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="1" x:Name="SelectDirectory" >Select</Button>
        <Button MinWidth="100" Grid.Row="1" Grid.Column="4" x:Name="LoadPageOne" >Show</Button>


        <!-- Row 2 -->
        <TextBlock Grid.Row="2" Grid.Column="1" Margin="8,0,8,8">File</TextBlock>
        <TextBox MinWidth="800" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" x:Name="FileSelected"></TextBox>
        <Button MinWidth="100" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="1" x:Name="SelectFile" >Select</Button>
        <Button MinWidth="100" Grid.Row="2" Grid.Column="4" x:Name="LoadPageTwo" >Show</Button>

        <!-- Row 3 -->
        <!--
        <Button MinWidth="100" Grid.Row="3" Grid.Column="2" x:Name="LoadPageOne" >ONE</Button>
        <Button MinWidth="100" Grid.Row="3" Grid.Column="3" x:Name="LoadPageTwo" >TWO</Button>
        -->

        <!-- Row 4 -->
        <!--<Button MinWidth="500" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="SelectDirectory" >Select Directory</Button>-->

        <!-- Row 5 -->
        <ContentControl Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="4" x:Name="ActiveItem" Margin="20"></ContentControl>
    </Grid>
</Window>
